<h2>Edit Post</h2>
<%= form_for @post, url: update_path do |f| %>
  <p><%= f.text_field :title, placeholder: "enter title" %></p>
    <% if @post.errors.messages[:title].any? %>
    <span class="error"><%= @post.errors.messages[:title][0] %></span>
     <% end %>

  <p><%= f.text_area :body, placeholder:"enter body text" %></p>

      <% if @post.errors.messages[:body].any? %>
    <span class="error"><%= @post.errors.messages[:body][0] %></span>
    <% end %>
    

  <p> <%= f.submit "Update", class: "btn btn-primary" %></p> 
  <%# カンマの後にクラスを設定　%>
<% end %>
